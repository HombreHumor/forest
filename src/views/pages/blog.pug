extends ../main.layout.pug

block variables
  - var title = 'Блог'

block scripts
  script(src='blog.bundle.js')

block content
  header.main-header.main-header--blog
    .main-header__center.main-header__center--blog.container
      +image("content/user.jpg", "Владимир Астахов (фото)", "main-header__photo")
      +title('Блог', 'blog')
      span.main-header__blog-text Статьи, которые я написал
  main.blog
    .container.blog__container
      nav.blog__nav
        ul.blog__nav-list
          li.blog__nav-item
            button.blog__nav-btn.js-blog-open-btn(type="button") Самое важное в SASS
          each item in ['Приёмы в вёрстке, без которых не обходится ни один сайт', 'Самый необходимый набор Gulp плагинов', 'Почему я выбрал Jade']
