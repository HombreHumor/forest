block scripts
  script(src='blog.bundle.js')

block content
  header.main-header.main-header--blog
    ul.socials.main-header__socials
      each item in ['vk', 'gh', 'ln']
        li.socials__item
          a.socials__link.socials__link--main(href="#", class=`socials__link--`+item)
    .main-header__center.main-header__center--blog.container
      +image("content/user.jpg", "Владимир Астахов (фото)", "main-header__photo")
      +title('Блог', 'blog')
      span.main-header__blog-text Статьи, которые я написал
    button.main-header__down-btn(type="button")
  main.blog
    .container.blog__container
      nav.blog__nav
        ul.blog__nav-list
          each artcl in articles
            li.blog__nav-item
              button.blog__nav-btn(type="button" data-scrollto=artcl.link) #{artcl.name}
      section.blog__texts
        each artcl in articles
          article.blog__article(id=artcl.link)
            h2.blog__article-title #{artcl.name}
            time.blog__article-date(datetime=artcl.datetime) #{artcl.formattedDate}
            | !{artcl.text}